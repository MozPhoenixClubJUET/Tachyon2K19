    //	Given an array with predefined integers and a number N,we need to calculate the number of elements divisible by N in the array,using STL
    #include <bits/stdc++.h>
    using namespace std;
    int N;
    bool isDiv(int i)
    {
	  if (i % N != 0)
		return true;
	 else
		return false;
     }
     int main()
    {
	  int a[] = { 1, 2, 6, 3, 4, 5 };
	  N = 2;
	  int n = sizeof(a) / sizeof(a[0]);
	
        int count = count_if(a, a+n, isDiv) ;
	
         cout << "Elements divisible by "<< N << ": " << count;
	   return 0;
    }
