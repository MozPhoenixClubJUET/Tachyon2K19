    //  Program to find a letter in a string
    #include<bits/stdc++.h>
    using namespace std;
    int main(void)
    {
    string s="xyzbc";
    sort(s.begin(),s.end());

    size_t w;
    w = s.find('b');

    if(w==string::npos)
    cout<<"Found"<<endl;

    else
    cout<<"Not Found"<<endl;
    return 0;
   }

/*Example:
  A correct code of this program will output the following for searching character 'b' in string "xyzbc" : 
  Output: Found*/
