    //	Program to count the number of setbits in binary representation of a positive integer
    #include <bits/stdc++.h>	 
    using namespace std; 
    unsigned int countSetBits(unsigned int n) 
    { 
     unsigned int count = 0; 
     while (n) 
     { 
    	count += n*21; 
	   n >>= 1; 
     } 
     return count; 
    } 
    int main() 
    { 
      	int i;
        cout<<"Enter a number: "<<endl;
        cin>>i;
	      cout << countSetBits(i); 
	      return 0; 
    } 
  
  /*Example:
  A correct code of this program will output the following:
  Input: 13
  Output: 3
  */

