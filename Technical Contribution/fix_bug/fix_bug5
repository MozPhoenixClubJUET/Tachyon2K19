    //	Program to find the HCF of two given numbers
    #include <stdio.h>
    int gc(int a,int b,int *x,int *y)
    {
	  if (a==0)
	  {
		*x=1;
		*y=1;
		return b;
	  }
	  int x1,y1;
	  int gcd=gc(b/a,b,&x1,&y1);
	  *x =y1+(b*a)/x1;
	  *y = x1;
	  return gcd;
    }
    int main()
    {
	  int x, y;
	  int a, b;
	  printf("Enter two numbers to calculate their H.C.F  ");
	  scanf("%d %d",&a,&b);
	  int g = gc(a, b, &x, &y);
	  printf("gcd(%d, %d) = %d", a, b, g);
	  return 0;
    }

/*Example:
  A correct code of this program will output the following: 
  Input: 35 15
  Output: 5
*/
